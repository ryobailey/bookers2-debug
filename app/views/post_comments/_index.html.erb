 <p>コメント件数：<%= book.post_comments.count %></p>
            <% book.post_comments.each do |post_comment| %>
              <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
              
              <% if post_comment.user == current_user %>
                <div class="comment-delete">
                  <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true%>
                </div>
              <% end %>
            
            <% end %>